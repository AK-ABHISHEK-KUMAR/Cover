<!-- Button trigger modal -->
<button
  type="button"
  class="btn btn-primary"
  data-bs-toggle="modal"
  data-bs-target="#jobModal"
>
  New job
</button>

<!-- Modal -->
<div
  class="modal fade"
  id="jobModal"
  tabindex="-1"
  role="dialog"
  aria-labelledby="jobModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Post a Job</h1>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <form action="/jobs" method="post">
        <div class="modal-body">
          <div class="container-fluid">
            <div class="input-group mb-3">
              <span class="input-group-text" id="basic-addon1">Category</span>
              <select class="form-control" id="jobCategory" name="category">
                <option value="">Select Job Category</option>
                <option value="Tech">Tech</option>
                <option value="Non-Tech">Non-Tech</option>
              </select>
            </div>
            <div class="input-group mb-3">
              <span class="input-group-text" id="basic-addon1"
                >Designation</span
              >
              <select
                class="form-control"
                id="jobDesignation"
                name="designation"
              >
                <option value="">Select Job Designation</option>
                <option value="Software Engineer">Software Engineer</option>
                <option value="Product Manager">Product Manager</option>
                <option value="Sales Representative">
                  Sales Representative
                </option>
                <option value="Financial Analyst">Financial Analyst</option>
                <option value="HR Manager">HR Manager</option>
              </select>
            </div>
            <div class="input-group mb-3">
              <span class="input-group-text" id="basic-addon1"
                >Job Description</span
              >
              <textarea
                rows="2"
                class="form-control"
                id="jobDescription"
                name="description"
                placeholder="Enter job description"
              ></textarea>
            </div>
            <div class="input-group mb-3">
              <span class="input-group-text" id="basic-addon1">Location</span>
              <input
                type="text"
                class="form-control"
                id="jobLocation"
                name="location"
                placeholder="Enter job location"
              />
            </div>
            <div class="input-group mb-3">
              <span class="input-group-text" id="basic-addon1"
                >Company Name</span
              >
              <input
                type="text"
                class="form-control"
                id="companyName"
                name="companyName"
                placeholder="Enter company name"
              />
            </div>
            <div class="input-group mb-3">
              <span class="input-group-text" id="basic-addon1">Salary</span>
              <input
                type="text"
                class="form-control"
                id="salary"
                name="salary"
                placeholder="40k-100k"
              />
              <span class="input-group-text" id="basic-addon1">Openings</span>
              <input
                type="text"
                class="form-control"
                id="totalOpenings"
                name="openings"
                placeholder="Total openings"
              />
            </div>
            <div class="input-group mb-3">
              <span class="input-group-text" id="basic-addon1">Skills</span>
              <input
                type="text"
                class="form-control"
                id="skills"
                name="skills"
                placeholder="React, Redux, Express-js, ..."
              />
            </div>
            <div class="input-group mb-3">
              <span class="input-group-text" id="basic-addon1">Last Date</span>
              <input
                type="date"
                class="form-control"
                id="lastDate"
                name="lastDate"
              />
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button
            type="button"
            class="btn btn-secondary"
            data-bs-dismiss="modal"
          >
            Close
          </button>
          <button type="submit" class="btn btn-primary">Post</button>
        </div>
      </form>
    </div>
  </div>
</div>
